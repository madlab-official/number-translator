{
    "name": "madlab/number-translator",
    "description": "Number Translator Package. Translate number to sonkha (Bangla).",
    "keywords": [
        "madlab",
        "number-translator"
    ],
    "homepage": "https://github.com/md-harun-or-roshid/number-translator",
    "license": "MIT",
    "authors": [
        {
            "name": "Md. Harun-Or-Roshid",
            "email": "md.parvez28@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "friendsofphp/php-cs-fixer": "^3.66.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Madlab\\NumberTranslator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Madlab\\NumberTranslator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
